<%- include('partials/header') %>

<div class="flex justify-center items-center my-10">
    <div class="w-full max-w-md">
        <div class="card animate-fadeIn">
            <div class="bg-indigo-600 p-6 rounded-t-lg">
                <h1 class="text-white text-2xl font-bold text-center">Login to Laser Tech Quiz</h1>
                <p class="text-indigo-200 text-center mt-2">Enter your credentials to access the quiz</p>
            </div>
            <div class="p-8">
                <% if (typeof error !== 'undefined') { %>
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded" role="alert">
                        <p><i class="fas fa-exclamation-circle mr-2"></i> <%= error %></p>
                    </div>
                <% } %>
                
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-gray-400"></i>
                            </div>
                            <input type="email" id="email" name="email" class="form-control pl-10" placeholder="Enter your email" required>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input type="password" id="password" name="password" class="form-control pl-10" placeholder="Enter your password" required>
                        </div>
                    </div>
                    
                    <div class="mt-8">
                        <button type="submit" class="w-full btn btn-primary py-3 flex justify-center items-center">
                            <i class="fas fa-sign-in-alt mr-2"></i> Login
                        </button>
                    </div>
                </form>
                
                <div class="mt-6 text-center">
                    <p class="text-gray-600">Don't have an account? <a href="/register" class="text-indigo-600 hover:underline font-medium">Register here</a></p>
                </div>
                
                <div class="mt-8 border-t border-gray-200 pt-6">
                    <p class="text-center text-gray-500 text-sm">Use demo account: <span class="font-semibold">demo@example.com</span> / <span class="font-semibold">password</span></p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 